<% layout('/layouts/boilerplate.ejs') -%>

<body style="
background-image: url('https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1600&q=80');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  min-height: 100vh;
">
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-7 shadow p-4 rounded-4 bg-light mb-5">
        <h3 class="mb-4 text-center">üìù Create a New Listing</h3>

        <form method="POST" action="/listings" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input id="title" name="listing[title]" type="text" class="form-control" required placeholder="Enter title">
            <div class="valid-feedback">Looks Great!</div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="listing[description]" class="form-control" rows="3" required placeholder="Enter description"></textarea>
            <div class="invalid-feedback">Please provide a short description.</div>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input id="image" name="listing[image]" type="text" class="form-control" placeholder="Enter image URL">
            <div class="invalid-feedback"></div>

          </div>

          <div class="row">
            <div class="col-md-5 mb-3">
              <label for="price" class="form-label">Price</label>
              <input id="price" name="listing[price]" type="number" class="form-control" required placeholder="Enter price">
              <div class="invalid-feedback">Please provide a price.</div>
            </div>

            <div class="col-md-7 mb-3">
              <label for="country" class="form-label">Country</label>
              <input id="country" name="listing[country]" type="text" class="form-control" required placeholder="Enter country">
              <div class="invalid-feedback">Please provide a country.</div>
            </div>
          </div>

          <div class="mb-4">
            <label for="location" class="form-label">Location</label>
            <input id="location" name="listing[location]" type="text" class="form-control" required placeholder="Enter location">
            <div class="invalid-feedback">Please provide a location.</div>
          </div>

          <div class="d-grid">
            <button type="submit" class="btn btn-success btn-lg">‚ûï Add Listing</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
