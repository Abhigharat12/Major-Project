<% layout('/layouts/boilerplate.ejs') -%>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  html, body {
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', sans-serif;
    background: url('https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1600&q=80') no-repeat center center fixed;
    background-size: cover;
  }

  .edit-bg {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
  }

  .edit-card {
    background: rgba(20, 20, 20, 0.85);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 40px;
    width: 100%;
    max-width: 800px;
    color: #f8f9fa;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.6);
  }

  .edit-card h2 {
    font-weight: 700;
    text-align: center;
    margin-bottom: 30px;
    color: #ffc107;
  }

  .image-preview {
    height: 150px;
    width: 100%;
    object-fit: contain;
    object-position: center;
    border-radius: 12px;
    border: 2px dashed #ffc107;
    background-color: rgba(255, 255, 255, 0.05);
    margin-bottom: 10px;
  }

  .img-wrapper {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .btn-custom {
    background-color: #ffc107;
    border: none;
    color: #000;
  }

  .btn-custom:hover {
    background-color: #e0a800;
  }
</style>

<div class="edit-bg">
  <div class="edit-card">
    <h2>Edit Listing</h2>

    <% if (!listing) { %>
      <div class="alert alert-danger text-center">Listing not found or invalid ID.</div>
    <% } else { %>
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data" novalidate>
        
        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input id="title" name="listing[title]" value="<%= listing.title %>" class="form-control" required />
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" rows="3" required><%= listing.description %></textarea>
        </div>

        <!-- Category -->
        <div class="row mt-4">
          <label for="type" class="form-label">Category</label>
          <select id="type" name="listing[type]" class="form-select" required>
            <% const types = ["Adventure", "Beach", "Mountain", "City", "Historical", "Luxury", "Rural", "Camping", "Cultural", "Desert"]; %>
            <% types.forEach(t => { %>
              <option value="<%= t %>" <%= listing.type === t ? 'selected' : '' %>><%= t %></option>
            <% }); %>
          </select>
        </div>

        <!-- Upload Multiple Images -->
        <div class="mb-3 mt-4">
          <label for="imageInput" class="form-label">Upload New Images</label>
          <input id="imageInput" name="image" type="file" class="form-control" accept="image/*" multiple onchange="previewImages()" />
        </div>

        <!-- Current Images -->
        <div class="row mt-4">
          <h6>Current Images</h6>
          <% if (listing.image && listing.image.length > 0) { %>
            <% listing.image.forEach((img, index) => { %>
              <div class="col-md-4 img-wrapper" id="image-<%= index %>">
                <img src="<%= img.url %>" class="img-thumbnail image-preview" alt="Current image">
                <button type="button" class="btn-close" aria-label="Close" onclick="deleteImage('<%= img.filename %>', 'image-<%= index %>')"></button>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-muted">No images available</p>
          <% } %>
        </div>

        <input type="hidden" name="delete_images" id="delete_images_input">

        <!-- New Previews -->
        <div class="row mt-4">
          <h6>New Image Previews</h6>
          <div id="previewContainer" class="d-flex flex-wrap gap-3"></div>
        </div>

        <!-- Price & Location -->
        <div class="row mt-4">
          <div class="col-md-4 mb-3">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required />
          </div>
          <div class="col-md-8 mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required />
          </div>
        </div>

        <div class="mb-4">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required />
        </div>

        <!-- Submit -->
        <div class="d-grid">
          <button type="submit" class="btn btn-custom fw-bold rounded-pill">Save Changes</button>
          <a href="/listings/<%= listing._id %>" class="btn btn-outline-light btn-sm mt-3 rounded-pill">Cancel</a>
        </div>
      </form>
    <% } %>
  </div>
</div>

<script>
  let imagesToDelete = [];

  function deleteImage(filename, elementId) {
    imagesToDelete.push(filename);
    document.getElementById("delete_images_input").value = imagesToDelete.join(',');
    document.getElementById(elementId).style.display = 'none';
  }

  function previewImages() {
    const input = document.getElementById("imageInput");
    const previewContainer = document.getElementById("previewContainer");
    previewContainer.innerHTML = ""; // clear old previews

    if (input.files) {
      Array.from(input.files).forEach(file => {
        const reader = new FileReader();
        reader.onload = function (e) {
          const img = document.createElement("img");
          img.src = e.target.result;
          img.classList.add("img-thumbnail", "image-preview");
          previewContainer.appendChild(img);
        };
        reader.readAsDataURL(file);
      });
    }
  }
</script>
